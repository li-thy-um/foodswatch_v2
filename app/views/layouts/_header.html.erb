<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a href="<%= root_path %>" id="logo">
        foodsw<%= image_tag "logo.png", alt: "logo", size: "30x30", style: "margin-bottom:3px;" %>tch
      </a>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "首页", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to "所有用户", users_path %></li>
            <li id="fat-menu" class="dropdown">
            <a href="#"
               class="dropdown-toggle"
               data-toggle="dropdown">
               @<%= current_user.name %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "我的主页", current_user %></li>
                <li>
                  <%= link_to "我的食物", watches_user_path(current_user) %>
                </li>
                <li><%= link_to "我的统计", calorie_user_path(current_user) %></li>
                <li><%= link_to "设置",
                  edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "退出登陆", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "登陆", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
