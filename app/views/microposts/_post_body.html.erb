<% span = "col-md-11" %>
<% span = "col-md-10" if page == "comment" %>
<% span = "col-md-9" if page == "feed" or page == "show" or page == "detail" %>

<div class="<%= span %>">
  <% if page == "feed" or page == "show" %>
    <span class="user"><%= user_link(post.user) %></span>
  <% end %>
  <%= render 'shared/post_content', micropost: post, page: page %>
</div>
