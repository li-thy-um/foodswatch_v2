<span class="content">
  <%= wrap(micropost.content) %>
  <% micropost.foods.each do |food| %>
    <%= render 'shared/food_tag', food: food %>
  <% end %>
  <% if micropost.original_id? %>
    || 转自：
    <% o_user = micropost.original_post.user %>
    <%= link_to "@" + o_user.name %>   
  <% end %>
    <br/>
    <br/>
  <% if page == "show" %> <br/> <% end %>
</span>


<% option = ["feed", "show", "share", "comment"]%>
<% if option.include?(page) %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
<% end %>
