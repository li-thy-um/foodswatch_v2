<% provide(:title, '修改个人资料') %>



<div class='row-fluid'>
  <div class= 'col-md-3'>
    <div class='panel panel-default'>
      <div class="panel-body">
        <%= gravatar_for @user %>
        <a href='http://gravatar.com/emails' target='_blank'>修改头像</a>
      </div>
    </div>
  </div>
</div>

  <div class='col-md-6'>
    <div class='panel panel-default'>
      <div class="panel-body">
        <h1>修改个人资料</h1>
        <%= form_for(@user) do |f| %>
          <%= render 'fields', f: f %>
          <div class='text-center'><%= f.submit '保存修改', class: 'btn btn-large btn-danger' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
